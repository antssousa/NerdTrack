<% content_for :title, " - Episódios" %>

<div class="sidebar">
<%= render :partial => 'blocks/info' %>
<%= render :partial => 'blocks/search' %>
<%= render(:layout => 'blocks/counter') %>
<%= render(:layout => 'blocks/topcontrib') %>
<%= render(:layout => 'blocks/github') %>
</div>

<div class="content">
	<div class="quickaccess">
		<% semantic_form_for :episodio, @episodio, :url => {:action => 'quick_load'}, :html => { :class => "quickload" } do |form| %>
			<% form.buttons do %>
			  <%= form.input :full_id, :label => "Episódio #", :input_html => { :size => "5" } %>
			  <%= form.commit_button "ir" %>
			<% end -%>
		<% end %>
	</div>
	<h1>Escolha um Episódio</h1>

    <div class="ad">
        <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
        <!-- Banner -->
        <ins class="adsbygoogle"
             style="display:inline-block;width:468px;height:60px"
             data-ad-client="ca-pub-3522142981567156"
             data-ad-slot="2613434229"></ins>
        <script>
        (adsbygoogle = window.adsbygoogle || []).push({});
        </script>
    </div>

	<ul class="episodios">
		<% @episodios.each do |episodio| %>
		<li>
			<%= link_to "<span>#"+episodio.numero.to_s+episodio.parte.to_s+ "</span> - " +episodio.titulo + ' <em class="ep_stats">('+ episodio.tracks.count(:all).to_s + 'músicas / '+ episodio.quotes.count(:all).to_s + ' frases)</em>', episodio %>
			
		</li>
		<% end %>
	</ul>
	
    <div class="ad">
        <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
        <!-- Banner -->
        <ins class="adsbygoogle"
             style="display:inline-block;width:468px;height:60px"
             data-ad-client="ca-pub-3522142981567156"
             data-ad-slot="2613434229"></ins>
        <script>
        (adsbygoogle = window.adsbygoogle || []).push({});
        </script>
    </div>
    
	<%= will_paginate @posts %>
</div>

<div class="adfull">
    <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
    <!-- LargeBoard -->
    <ins class="adsbygoogle"
         style="display:inline-block;width:970px;height:90px"
         data-ad-client="ca-pub-3522142981567156"
         data-ad-slot="1136701024"></ins>
    <script>
    (adsbygoogle = window.adsbygoogle || []).push({});
    </script>
</div>

<script type="text/javascript">
	$('ul.episodios li:odd').addClass("odd");
</script>